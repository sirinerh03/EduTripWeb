                    <th>H√©bergement</th>
                    <th>Date d√©but</th>
                    <th>Date fin</th>
                    <th>Commentaire</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for reservation_hebergement in pagination %}
                <tr>
                    <td>{{ reservation_hebergement.idReservationh }}</td>
                    <td>
                        {% if reservation_hebergement.hebergement %}
                            {{ reservation_hebergement.hebergement.nomh }}
                        {% else %}
