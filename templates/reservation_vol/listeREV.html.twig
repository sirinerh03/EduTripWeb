{% extends 'base.html.twig' %}

{% block title %}R√©server un vol{% endblock %}

{% block content %}
<style>
    body {
        background: linear-gradient(to right, #e0f7fa, #ffffff);
        font-family: 'Segoe UI', sans-serif;
        color: #004d40;
        overflow-x: hidden;
        min-height: 100vh;
    }

    h1 {
        color: #00bfa5;
        font-weight: bold;
    }

    .ticket {
        background: #fff;
        border-radius: 20px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        margin: 30px 0;
        overflow: hidden;
        position: relative;
        display: flex;
        flex-direction: column;
        border-left: 6px solid #00bfa5;
    }

    .ticket-header {
        padding: 20px;
        background: #00bfa5;
        color: white;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .ticket-header h5 {
        margin: 0;
        font-size: 1.2rem;
    }

    .ticket-body {
        padding: 20px;
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        border-top: 2px dashed #ccc;
        border-bottom: 2px dashed #ccc;
    }

    .ticket-body .info {
        flex: 1 1 45%;
        margin-bottom: 10px;
    }

    .ticket-body .info span {
        display: block;
        font-weight: bold;
        color: #00796b;
        margin-bottom: 3px;
    }

    .ticket-footer {
        padding: 15px 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        background: #f8f9fa;
    }

    .btn-reserver {
        background-color: #00bfa5;
        border: none;
        color: white;
        font-weight: bold;
        padding: 8px 16px;
        border-radius: 20px;
        transition: 0.3s;
        text-decoration: none;
    }

    .btn-reserver:hover {
        background-color: #008e76;
    }

    .no-vols {
        background-color: #e0f2f1;
        border: 1px dashed #00bfa5;
        padding: 20px;
        border-radius: 12px;
        text-align: center;
        color: #00695c;
        margin-top: 50px;
    }

    .animated-plane {
        position: fixed;
        width: 60px;
        height: 60px;
        background-image: url('https://cdn-icons-png.flaticon.com/512/7888/7888729.png');
        background-size: contain;
        background-repeat: no-repeat;
        animation: fly 20s linear infinite;
        opacity: 0.2;
        z-index: 0;
    }

    @keyframes fly {
        0% {
            top: 100%;
            left: -10%;
            transform: rotate(45deg);
        }
        50% {
            top: 50%;
            left: 50%;
            transform: rotate(10deg);
        }
        100% {
            top: -10%;
            left: 110%;
            transform: rotate(-10deg);
        }
    }
    
    .search-form input,
    .search-form button {
        padding: 8px;
        font-size: 14px;
    }
    a:hover {
      background-color: #0288d1;
  }
   background-color: #4fc3f7;

</style>

<!-- Avions anim√©s -->
<div class="animated-plane" style="animation-delay: 0s;"></div>
<div class="animated-plane" style="animation-delay: 5s; animation-duration: 25s;"></div>
<div class="animated-plane" style="animation-delay: 10s; animation-duration: 22s;"></div>

<div class="container mt-5">

<div class="d-flex align-items-center justify-content-between mb-4">
    <a href="{{ path('app_weather', {'city':'Tunis'}) }}"
       title="Voir la m√©t√©o"
       style="background-color: #00bcd4; border-radius: 8px; width: 50px; height: 50px; display: flex; align-items: center; justify-content: center;">
        <img src="https://cdn-icons-png.flaticon.com/512/1163/1163661.png" alt="M√©t√©o" style="width: 28px; height: 28px;">
    </a>
</div>
<div>    
    <h1 class="mb-4 text-center">üé´ Liste des billets disponibles</h1>

    <div style="width: 50px;"></div> {# Espace vide pour √©quilibrer √† droite #}

</div>
   <form method="get" action="{{ path('app_reservation_vol') }}" class="search-form" style="margin-bottom: 20px;">
    <div style="display: flex; gap: 10px; align-items: center;">
        <input type="text" name="depart" placeholder="Ville de d√©part" value="{{ app.request.get('depart') }}" class="form-control" />
        <input type="text" name="arrivee" placeholder="Ville d'arriv√©e" value="{{ app.request.get('arrivee') }}" class="form-control" />
        <input type="date" name="date" value="{{ app.request.get('date') }}" class="form-control" />
        <button type="submit" class="btn btn-primary">Rechercher</button>
<a href="{{ path('app_reservation_vol') }}" class="btn btn-secondary">
            <i class="fas fa-sync-alt"></i> 
        </a>    </div>
</form>

    {% if vols is not empty %}
        {% for vol in vols %}
            <div class="ticket">
                <div class="ticket-header">
                    <h5>‚úàÔ∏è {{ vol.aeroportDepart }} ‚Üí {{ vol.aeroportArrivee }}</h5>
                    <span>#{{ vol.numVol }}</span>
                </div>
                <div class="ticket-body">
                    <div class="info">
                        <span>üïê D√©part</span>
                        {{ vol.dateDepart ? vol.dateDepart|date('d/m/Y H:i') : 'Non d√©fini' }}
                    </div>
                    <div class="info">
                        <span>üïì Arriv√©e</span>
                        {{ vol.dateArrivee ? vol.dateArrivee|date('d/m/Y H:i') : 'Non d√©fini' }}
                    </div>
                    <div class="info">
                        <span>ü™ë Places</span>
