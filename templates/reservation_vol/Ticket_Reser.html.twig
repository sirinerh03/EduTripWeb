<style>
    body {
        background: linear-gradient(to right, #e0f7fa, #ffffff);
        font-family: 'Segoe UI', sans-serif;
        color: #004d40;
        min-height: 100vh;
        padding: 30px 20px;
    }

    h2 {
        color: #00bfa5;
        font-weight: bold;
        margin-bottom: 25px;
        text-align: center;
    }
    .form-error {
    color: #dc3545;
    font-size: 0.9rem;
    margin-top: 5px;
    display: block;
    }

    input:invalid {
    border-color: #dc3545 !important;
   }

   input:valid {
    border-color: #28a745 !important;
    }
    .ticket-container {
        max-width: 800px;
        margin: 0 auto;
        background: #fff;
        border-radius: 20px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        padding: 30px;
        position: relative;
        overflow: hidden;
        border-left: 6px solid #00bfa5;
    }

    .ticket-row {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        gap: 20px;
    }

    .ticket-row p {
        flex: 1 1 45%;
        margin: 5px 0;
    }

    .ticket-info {
        border-bottom: 2px dashed #00bfa5;
        padding-bottom: 20px;
        margin-bottom: 30px;
    }

    .ticket-info p {
        font-size: 1.1rem;
        margin: 8px 0;
        color: #00695c;
    }

    .ticket-info p strong {
        color: #004d40;
    }

    /* Group form fields under separate lines */
    .form-row-inline {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .form-row-inline .form-row {
        flex: 1 1 30%; /* Adjust the flex-basis to get the desired width */
        margin-bottom: 20px;
    }

    /* Make sure fields are not stretched to the full width */
    .form-row {
        margin-bottom: 20px;
    }

    .form-row input, .form-row select {
        border-radius: 10px;
        border: 1px solid #00bfa5;
        padding: 12px 15px;
        width: 100%;
        font-size: 1rem;
        transition: 0.3s;
    }

    .form-row input:focus, .form-row select:focus {
        border-color: #00796b;
        outline: none;
        box-shadow: 0 0 5px rgba(0, 191, 165, 0.4);
    }

    .btn-reserver {
    background-color: #007bff; /* Blue color */
