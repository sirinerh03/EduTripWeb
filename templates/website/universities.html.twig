{% extends 'base.html.twig' %}

{% block title %}Universités - EduTrip{% endblock %}

{% block content %}
    <!-- Page Header Start -->
    <div class="container-fluid bg-primary py-5 mb-5 page-header">
        <div class="container py-5">
            <div class="row justify-content-center">
                <div class="col-lg-10 text-center">
                    <h1 class="display-3 text-white animated slideInDown">Universités Partenaires</h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb justify-content-center">
                            <li class="breadcrumb-item"><a class="text-white" href="{{ path('app_home') }}">Accueil</a></li>
                            <li class="breadcrumb-item text-white active" aria-current="page">Universités</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- Page Header End -->

    <!-- Search Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="row g-4">
                <div class="col-lg-12">
                    <div class="bg-light rounded p-4">
                        <form action="#" method="get" class="row g-3">
                            <div class="col-md-4">
                                <input type="text" class="form-control" placeholder="Nom de l'université">
                            </div>
                            <div class="col-md-3">
                                <select class="form-select">
                                    <option selected>Pays</option>
                                    <option value="FR">France</option>
                                    <option value="UK">Royaume-Uni</option>
                                    <option value="US">États-Unis</option>
                                    <option value="CA">Canada</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <select class="form-select">
                                    <option selected>Domaine d'études</option>
                                    <option>Informatique</option>
                                    <option>Business</option>
                                    <option>Ingénierie</option>
                                    <option>Sciences</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <button type="submit" class="btn btn-primary w-100">Rechercher</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Search End -->

    <!-- Universities List Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                <h6 class="section-title bg-white text-center text-primary px-3">Nos Universités</h6>
                <h1 class="mb-5">Universités Partenaires</h1>
            </div>
            <div class="row g-4">
                <!-- University Item -->
                <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="course-item bg-light">
                        <div class="position-relative overflow-hidden">
                            <img class="img-fluid" src="{{ asset('img/university-1.jpg') }}" alt="Université 1">
                        </div>
                        <div class="p-4">
                            <div class="d-flex justify-content-between mb-3">
                                <small class="text-primary"><i class="fa fa-map-marker-alt text-primary me-2"></i>Paris, France</small>
                                <small class="text-primary"><i class="far fa-star text-primary me-2"></i>4.5 (250)</small>
                            </div>
                            <h5 class="mb-3">Université Paris-Saclay</h5>
                            <p class="mb-3">Une université de recherche française offrant des programmes innovants en sciences et technologies.</p>
                            <div class="d-flex justify-content-between">
                                <small class="text-muted"><i class="fa fa-graduation-cap me-2"></i>50+ Programmes</small>
                                <a class="btn btn-sm btn-primary" href="">En savoir plus</a>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- University Item -->
                <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.3s">
                    <div class="course-item bg-light">
                        <div class="position-relative overflow-hidden">
                            <img class="img-fluid" src="{{ asset('img/university-2.jpg') }}" alt="Université 2">
                        </div>
                        <div class="p-4">
                            <div class="d-flex justify-content-between mb-3">
                                <small class="text-primary"><i class="fa fa-map-marker-alt text-primary me-2"></i>Londres, UK</small>
                                <small class="text-primary"><i class="far fa-star text-primary me-2"></i>4.8 (320)</small>
                            </div>
                            <h5 class="mb-3">Imperial College London</h5>
                            <p class="mb-3">Une université de renommée mondiale spécialisée dans les sciences, l'ingénierie et la médecine.</p>
                            <div class="d-flex justify-content-between">
                                <small class="text-muted"><i class="fa fa-graduation-cap me-2"></i>100+ Programmes</small>
                                <a class="btn btn-sm btn-primary" href="">En savoir plus</a>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- University Item -->
                <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.5s">
                    <div class="course-item bg-light">
                        <div class="position-relative overflow-hidden">
                            <img class="img-fluid" src="{{ asset('img/university-3.jpg') }}" alt="Université 3">
                        </div>
                        <div class="p-4">
                            <div class="d-flex justify-content-between mb-3">
                                <small class="text-primary"><i class="fa fa-map-marker-alt text-primary me-2"></i>Toronto, Canada</small>
                                <small class="text-primary"><i class="far fa-star text-primary me-2"></i>4.7 (180)</small>
                            </div>
                            <h5 class="mb-3">University of Toronto</h5>
                            <p class="mb-3">L'une des meilleures universités du Canada, offrant une large gamme de programmes d'études.</p>
                            <div class="d-flex justify-content-between">
                                <small class="text-muted"><i class="fa fa-graduation-cap me-2"></i>200+ Programmes</small>
                                <a class="btn btn-sm btn-primary" href="">En savoir plus</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Pagination -->
            <div class="row mt-5">
                <div class="col-12">
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            <li class="page-item disabled">
                                <a class="page-link" href="#" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- Universities List End -->
{% endblock %} 