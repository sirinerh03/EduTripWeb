{% extends 'base.html.twig' %}

{% block title %}Créer une nouvelle Agence{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Créer une nouvelle Agence</h1>

        <a href="{{ path('app_agence_index') }}" class="btn btn-secondary mb-4">
            <i class="fas fa-arrow-left"></i> Retour à la liste
        </a>

        {% for flash in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show">
                {{ flash }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        {% for flash in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show">
                {{ flash }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        <div class="card shadow-sm">
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                
                {% for child in form %}
                    <div class="mb-3">
                        {{ form_label(child, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        
                        {% if child.vars.errors|length > 0 %}
                            {{ form_widget(child, {'attr': {'class': 'form-control is-invalid'}}) }}
                        {% else %}
                            {{ form_widget(child, {'attr': {'class': 'form-control'}}) }}
                        {% endif %}
                        
                        <div class="invalid-feedback">
                            {{ form_errors(child) }}
                        </div>
                    </div>
                {% endfor %}

                <div class="d-grid gap-2">
                    <button class="btn btn-success btn-lg" type="submit">
                        <i class="fas fa-save me-2"></i> Créer l'agence
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

    {% block javascripts %}
        {{ parent() }}
        <script>
            // Validation en temps réel
            document.addEventListener('DOMContentLoaded', function() {
                const forms = document.querySelectorAll('.needs-validation');
                
                Array.from(forms).forEach(function(form) {
                    form.addEventListener('submit', function(event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        
                        form.classList.add('was-validated');
                    }, false);
                });
            });
        </script>
    {% endblock %}
{% endblock %}