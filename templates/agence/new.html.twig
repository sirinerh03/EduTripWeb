{% extends 'base.html.twig' %}

{% block title %}Créer une nouvelle Agence{% endblock %}

{% block content %}
    <h1>Créer une nouvelle Agence</h1>

    <a href="{{ path('app_agence_index') }}" class="btn btn-secondary mb-3">
        <i class="fas fa-arrow-left"></i> Retour à la liste
    </a>

    {{ form_start(form) }}
        {{ form_row(form.nom_ag) }}
        {{ form_row(form.adresse_ag) }}
        {{ form_row(form.telephone_ag) }}
        {{ form_row(form.email_ag) }}
        {{ form_row(form.description_ag) }}
        {{ form_row(form.date_creation) }}

        <button class="btn btn-success mt-3" type="submit">
            <i class="fas fa-save me-2"></i> Créer l'agence
        </button>
    {{ form_end(form) }}
{% endblock %}
