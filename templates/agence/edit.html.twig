{% extends 'base.html.twig' %}

{% block title %}Modifier l'agence{% endblock %}

{% block content %}
<div class="container mt-4">
    <h1 class="mb-4 text-center">Modifier l'agence "{{ agence.nomAg }}"</h1>

    <a href="{{ path('app_agence_index') }}" class="btn btn-secondary mb-4">
        <i class="fas fa-arrow-left"></i> Retour à la liste
    </a>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    {{ form_start(form) }}
                        {{ form_row(form.nom_ag) }}
                        {{ form_row(form.adresse_ag) }}
                        {{ form_row(form.telephone_ag) }}
                        {{ form_row(form.email_ag) }}
                        {{ form_row(form.description_ag) }}
                        {{ form_row(form.date_creation) }}

                        <button class="btn btn-primary w-100 mt-3" type="submit">
                            <i class="fas fa-edit me-2"></i> Mettre à jour l'agence
                        </button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
