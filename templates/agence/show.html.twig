{% extends 'admin/homeadmin.html.twig' %}

{% block title %}Détails de l'Agence{% endblock %}

{% block Content %}
    <div class="container mt-4">
        <h1 class="mb-4">Détails de l'Agence: {{ agence.nomAg }}</h1>

        <a href="{{ path('app_agence_index') }}" class="btn btn-secondary mb-4">
            <i class="fas fa-arrow-left"></i> Retour à la liste des agences
        </a>

        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Informations sur l'agence</h5>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <strong>Nom:</strong> {{ agence.nomAg }}
                    </li>
                    <li class="list-group-item">
                        <strong>Adresse:</strong> {{ agence.adresseAg }}
                    </li>
                    <li class="list-group-item">
                        <strong>Email:</strong> {{ agence.emailAg }}
                    </li>
                    <li class="list-group-item">
                        <strong>Téléphone:</strong> {{ agence.telephoneAg }}
                    </li>
                    <li class="list-group-item">
                        <strong>Description:</strong> {{ agence.descriptionAg }}
                    </li>
                    <li class="list-group-item">
                        <strong>Date de création:</strong> {{ agence.dateCreation|date('d/m/Y') }}
                    </li>
                </ul>
            </div>
        </div>

        <div class="mt-4">
            <h4>Les Packs associés à cette agence</h4>
            {% if agence.packAgences|length > 0 %}
                <ul class="list-group">
                    {% for pack in agence.packAgences %}
                        <li class="list-group-item">
                            {{ pack.nomPk }} - {{ pack.descriptionPk }}
                        </li>
                    {% endfor %}
                </ul>
            {% else %}
                <p>Aucun pack associé à cette agence.</p>
            {% endif %}
        </div>

        <div class="mt-4">
            <a href="{{ path('app_agence_edit', {'id_agence': agence.idAgence}) }}" class="btn btn-warning">
                <i class="fas fa-edit"></i> Modifier l'agence
            </a>
        </div>
    </div>
     {# Espace réservé pour le footer #}
    <div style="height: 60px;"></div>


<style>
    /* Correction du positionnement */
    body {
        position: relative;
        min-height: 100vh;
        padding-bottom: 60px;
    }
    
    footer.footer {
        position: absolute;
        bottom: 0;
        width: 100%;
        height: 60px;
        z-index: 10;
        background: white; 
    }
</style>
{% endblock %}
