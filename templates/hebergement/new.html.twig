{% extends 'admin/homeadmin.html.twig' %}

{% block title %}Nouvel Hébergement{% endblock %}

{% block Content %}
<section style="max-width: 800px; margin: 0 auto; padding: 20px;">
    <h1 style="text-align: center; margin-bottom: 30px;">Ajouter un hébergement</h1>

    <div style="margin-bottom: 30px;">
        {{ include('hebergement/_form.html.twig') }}
    </div>

    <div style="text-align: center; margin-top: 20px;">
        <a href="{{ path('app_hebergement_index') }}"
           class="btn"
           style="background-color: #f0f0f0; color: #333; padding: 10px 20px; border-radius: 5px; text-decoration: none;">
            ⬅ Retour à la liste
        </a>
    </div>
</section>

<div style="height: 60px;"></div> {# Espace pour le footer #}

<style>
    body {
        position: relative;
        min-height: 100vh;
        padding-bottom: 60px;
        background-color: #f9f9f9;
        font-family: Arial, sans-serif;
    }

    footer.footer {
        position: absolute;
        bottom: 0;
        width: 100%;
        height: 60px;
        z-index: 10;
        background: white;
        border-top: 1px solid #ddd;
    }

    .btn:hover {
        opacity: 0.9;
        transition: opacity 0.2s ease-in-out;
    }
</style>
{% endblock %}
