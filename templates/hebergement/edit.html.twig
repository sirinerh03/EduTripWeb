{% extends 'admin/homeadmin.html.twig' %}

{% block title %}Modifier Hébergement{% endblock %}

{% block Content %}
    <section style="max-width: 800px; margin: 0 auto; padding: 20px;">
        <h1 style="text-align: center; margin-bottom: 30px;">Modifier Hébergement</h1>

        {% if hebergement.imageh %}
            <div style="text-align: center; margin-bottom: 20px;">
                <p><strong>Image actuelle :</strong></p>
                <img src="{{ asset('img/' ~ hebergement.imageh) }}" alt="{{ hebergement.nomh }}" width="200" style="border-radius: 8px; box-shadow: 0 2px 6px rgba(0,0,0,0.1);">
            </div>
        {% endif %}

        <div style="margin-bottom: 30px;">
            {{ include('hebergement/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
        </div>

        <div style="display: flex; justify-content: space-between; align-items: center;">
            <a href="{{ path('app_hebergement_index') }}" class="btn" style="background-color: #f0f0f0; color: #333; padding: 8px 16px; border-radius: 5px; text-decoration: none;">
                ← Retour à la liste
            </a>

            {{ include('hebergement/_delete_form.html.twig') }}
        </div>
    </section>

    <div style="height: 60px;"></div> {# Espace pour le footer #}

    <style>
        body {
            position: relative;
            min-height: 100vh;
            padding-bottom: 60px;
            background-color: #f9f9f9;
        }

        footer.footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            height: 60px;
            z-index: 10;
            background: white;
            border-top: 1px solid #ddd;
        }

        .btn:hover {
            opacity: 0.85;
        }
    </style>
{% endblock %}
