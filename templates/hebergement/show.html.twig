{% extends 'base.html.twig' %}

{% block title %}Détails Hébergement{% endblock %}

{% block body %}
    <h1>{{ hebergement.nomh }}</h1>

    {% if hebergement.imageh %}
        <img src="{{ asset('img/' ~ hebergement.imageh) }}" alt="{{ hebergement.nomh }}" width="300" style="margin-bottom: 20px;">
    {% else %}
        <p>Pas d'image</p>
    {% endif %}

    <p><strong>Type :</strong> {{ hebergement.typeh }}</p>
    <p><strong>Adresse :</strong> {{ hebergement.adressh }}</p>
    <p><strong>Capacité :</strong> {{ hebergement.capaciteh }}</p>
    <p><strong>Prix :</strong> {{ hebergement.prixh }}</p>
    <p><strong>Disponibilité :</strong> {{ hebergement.disponibleh }}</p>
    <p><strong>Description :</strong> {{ hebergement.descriptionh }}</p>

    <a href="{{ path('app_hebergement_edit', {'id_hebergement': hebergement.id}) }}">Modifier</a>
    <a href="{{ path('app_hebergement_index') }}">Retour à la liste</a>
{% endblock %}
