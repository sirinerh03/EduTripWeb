{% extends 'base.html.twig' %}

{% block title %}Hebergement index{% endblock %}

{% block body %}
    <h1>Hebergement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id_hebergement</th>
                <th>Nomh</th>
                <th>Typeh</th>
                <th>Adressh</th>
                <th>Capaciteh</th>
                <th>Prixh</th>
                <th>Disponibleh</th>
                <th>Descriptionh</th>
                <th>Imageh</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for hebergement in hebergements %}
            <tr>
                <td>{{ hebergement.id }}</td>
                <td>{{ hebergement.nomh }}</td>
                <td>{{ hebergement.typeh }}</td>
                <td>{{ hebergement.adressh }}</td>
                <td>{{ hebergement.capaciteh }}</td>
                <td>{{ hebergement.prixh }}</td>
                <td>{{ hebergement.disponibleh }}</td>
                <td>{{ hebergement.descriptionh }}</td>
                <td>{{ hebergement.imageh }}</td>
                <td>
                    <a href="{{ path('app_hebergement_show', {'id_hebergement': hebergement.id}) }}">show</a>
                    <a href="{{ path('app_hebergement_edit', {'id_hebergement': hebergement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_hebergement_new') }}">Create new</a>
{% endblock %}
