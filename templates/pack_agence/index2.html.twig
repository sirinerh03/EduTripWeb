{% extends 'base.html.twig' %}

{% block title %}Liste des Packs d'Agence{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .packs-container {
            transition: opacity 0.3s ease;
            min-height: 300px;
        }

        .packs-container.loading {
            opacity: 0.5;
            position: relative;
        }

        .loading-overlay {
            position: absolute;
            top: 0; left: 0; right: 0; bottom: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: rgba(255, 255, 255, 0.7);
            z-index: 10;
        }

        #filter-form input,
        #filter-form select {
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

        #filter-form input:focus,
        #filter-form select:focus {
            border-color: #86b7fe;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }

        .spinner-border {
            width: 3rem;
            height: 3rem;
        }

        .action-buttons {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }
    </style>
{% endblock %}

{% block content %}
<div class="container">
    <h1 class="my-4 text-primary">üì¶ Liste des Packs d'Agence</h1>

    <div class="mb-4 d-flex gap-2">
        <a href="{{ path('app_meilleurs_packs') }}" class="btn btn-warning w-auto">
            <i class="fas fa-trophy me-2"></i> Voir les 3 Meilleurs Packs
        </a>
        <a href="{{ path('calendar') }}" class="btn btn-primary w-auto">
            üìÖ Voir le Calendrier
        </a>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <form id="filter-form" class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label for="nom" class="form-label">üîç Nom</label>
                    <input type="text" class="form-control" id="nom" name="nom"
                           value="{{ app.request.query.get('nom') }}"
                           placeholder="Rechercher...">
                </div>
                <div class="col-md-3">
                    <label class="form-label">üí∞ Prix (TND)</label>
                    <div class="d-flex gap-2">
                        <input type="number" class="form-control" id="prix_min" name="prix_min" value="{{ prix_min ?? 100 }}"
                               min="100" max="10000" step="100">
                        <span class="text-muted">√†</span>
                        <input type="number" class="form-control" id="prix_max" name="prix_max" value="{{ prix_max ?? 10000 }}"
                               min="100" max="10000" step="100">
                    </div>
                </div>
                <div class="col-md-3">
                    <label class="form-label">‚è≥ Dur√©e (jours)</label>
                    <div class="d-flex gap-2">
                        <input type="number" class="form-control" id="duree_min" name="duree_min" value="{{ duree_min ?? 1 }}"
                               min="1" max="30" step="1">
                        <span class="text-muted">√†</span>
                        <input type="number" class="form-control" id="duree_max" name="duree_max" value="{{ duree_max ?? 30 }}"
                               min="1" max="30" step="1">
                    </div>
                </div>
                <div class="col-md-3">
                    <label class="form-label">üîÉ Trier par</label>
                    <select name="order_by" id="order_by" class="form-select">
                        <option value="p.nom_pk" {{ order_by == 'p.nom_pk' ? 'selected' : '' }}>Nom</option>
                        <option value="p.prix" {{ order_by == 'p.prix' ? 'selected' : '' }}>Prix</option>
                        <option value="p.duree" {{ order_by == 'p.duree' ? 'selected' : '' }}>Dur√©e</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">&nbsp;</label>
                    <select name="order_dir" id="order_dir" class="form-select">
                        <option value="asc" {{ order_dir == 'asc' ? 'selected' : '' }}>‚¨ÜÔ∏è Croissant</option>
                        <option value="desc" {{ order_dir == 'desc' ? 'selected' : '' }}>‚¨áÔ∏è D√©croissant</option>
                    </select>
                </div>

                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-filter me-2"></i>Filtrer
                    </button>
                </div>
                <div class="col-md-3">
                    <button type="button" id="reset-btn" class="btn btn-outline-secondary w-100">
                        <i class="fas fa-undo me-2"></i>R√©initialiser
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="packs-container" id="packs-results">
        {% if packAgences is empty %}
            <p>Aucun pack ne correspond √† vos crit√®res.</p>
        {% else %}
            {% include 'pack_agence/_pack_cards.html.twig' %}
        {% endif %}
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const resetBtn = document.getElementById('reset-btn');

            resetBtn.addEventListener('click', function () {
                // Redirige vers l'URL de base sans param√®tres pour r√©initialiser les filtres
                window.location.href = '{{ path("app_pack_agence_liste") }}';
            });
        });
    </script>
    
{% endblock %}