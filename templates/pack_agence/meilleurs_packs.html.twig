{% extends 'base.html.twig' %}

{% block title %}Meilleurs Packs{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="text-center text-primary mb-5">Nos Meilleurs Packs</h1>
    <div class="row justify-content-center">
        {% for pack in meilleursPacks %}
            <div class="col-md-4 mb-4">
                <div class="card shadow-lg rounded-lg border-0 overflow-hidden">
                    <div class="card-header bg-success text-white text-center py-3">
                        <h5 class="card-title mb-0">{{ pack.nomPk }}</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            <strong>Prix:</strong> {{ pack.prix }} TND <br>
                            <strong>Durée:</strong> {{ pack.duree }} jours
                        </p>
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <!-- Lien corrigé vers la route 'app_pack_agence_details' -->
                            <a href="{{ path('app_pack_agence_details', { 'id_pack': pack.idPack }) }}" class="btn btn-outline-success px-4 py-2 rounded-pill text-success">Voir Détails</a>
                        </div>
                    </div>
                    <div class="card-footer text-center">
                        <a href="{{ path('app_pack_agence_details', { 'id_pack': pack.idPack }) }}" class="text-primary text-decoration-none fw-bold fs-5">Explorez cette opportunité !</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
