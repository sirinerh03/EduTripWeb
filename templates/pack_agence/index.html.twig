{% extends 'base.html.twig' %}

{% block title %}Liste des Packs d'Agence{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }
    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
    .pack-table {
        width: 100%;
        border-collapse: collapse;
    }
    .pack-table th, .pack-table td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }
    .pack-table th {
        background-color: #f4f4f4;
    }
    .btn {
        background-color: #4CAF50;
        color: white;
        padding: 10px 20px; /* Uniform padding */
        border: none;
        cursor: pointer;
        text-decoration: none;
        font-size: 16px; /* Ensure the font size is consistent */
        display: inline-block; /* Ensure buttons align properly */
        text-align: center;
        border-radius: 5px; /* Optional: adds rounded corners */
    }
    .btn:hover {
        background-color: #45a049;
    }
    /* Ensure the delete form button has the same style */
    .btn-delete {
        background-color: #4CAF50;
        color: white;
        padding: 10px 20px;
        border: none;
        cursor: pointer;
        font-size: 16px;
        display: inline-block;
        text-align: center;
        border-radius: 5px;
    }
    .btn-delete:hover {
        background-color: #45a049;
    }
</style>

<div class="example-wrapper">
    <h1>Liste des Packs d'Agence</h1>

    <table class="pack-table">
        <thead>
            <tr>
                <th>Nom du Pack</th>
                <th>Prix</th>
                <th>Durée (jours)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pack in packAgences %}
            <tr>
                <td>{{ pack.nomPk }}</td>
                <td>{{ pack.prix }}</td>
                <td>{{ pack.duree }}</td>
                <td>
                    <a href="{{ path('app_pack_agence_show', {'id': pack.idPack}) }}" class="btn">Voir</a>
                    <a href="{{ path('app_pack_agence_edit', {'id': pack.idPack}) }}" class="btn">Modifier</a>
                    {# Delete Button Form (Green button) #}
                    <form action="{{ path('app_pack_agence_delete', {'id': pack.idPack}) }}" method="post" style="display:inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ pack.idPack) }}">
                        <button type="submit" class="btn-delete">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun pack trouvé.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_pack_agence_new') }}" class="btn">Créer un nouveau Pack</a>
</div>
{% endblock %}
