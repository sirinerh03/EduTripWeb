{% extends 'base.html.twig' %}

{% block title %}Modifier un vol{% endblock %}

{% block content %}
<div class="container mt-5">
    <h1 class="mb-4">✏️ Modifier un vol</h1>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        
