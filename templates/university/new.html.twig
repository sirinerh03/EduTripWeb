                        <div class="p-4 pb-0">
                            {{ include('university/_form.html.twig') }}
                        </div>
                        <div class="p-4 pt-2">
                            <div class="text-center">
                                <a href="{{ path('app_university_index') }}" class="btn btn-outline-primary">
