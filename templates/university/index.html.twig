{% extends 'base.html.twig' %}

{% block title %}Universities{% endblock %}

{% block content %}
    <!-- Universities Section Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                <h1 class="mb-5">Les Universités</h1>
            </div>
            

            <!-- Search Form -->
            <form method="get" class="mb-4">
                <div class="row g-2">
                    <div class="col-md-3">
                        <input type="text" name="search" value="{{ search|default('') }}" class="form-control" placeholder="Search by name or city...">
                    </div>
                    <div class="col-md-3">
                        <select name="city" class="form-select">
                            <option value="">All Cities</option>
                            {% for city in cities %}
                                <option value="{{ city.ville }}" {% if selectedCity == city.ville %}selected{% endif %}>
                                    {{ city.ville }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-md-3">
                        <select name="email_domain" class="form-select">
                            <option value="">All Email Domains</option>
                            {% for domain in emailDomains %}
                                <option value="{{ domain }}" {% if selectedEmailDomain == domain %}selected{% endif %}>
                                    {{ domain }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-md-3 d-flex gap-2">
                        <button class="btn btn-primary" type="submit">Apply Filters</button>
                        <a href="{{ path('app_university_index') }}" class="btn btn-outline-secondary">Clear Filters</a>
                    </div>
                </div>
            </form>

            <div class="row g-4 justify-content-center">
                <div class="col-lg-12 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="course-item bg-light">
                        <div class="p-4">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th scope="col">
                                            University
                                        </th>
                                        <th scope="col">
                                            City
                                        </th>
                                        <th scope="col">
                                            Email
                                        </th>
                                        <th scope="col">Description</th>
                                        <th scope="col">QR Code</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for university in universities %}
                                    <tr>
                                        <td class="fw-bold">{{ university.nom }}</td>
                                        <td>{{ university.ville }}</td>
                                        <td><a href="mailto:{{ university.email }}" class="text-primary">{{ university.email }}</a></td>
                                        <td>
                                            {{ university.description|length > 100 
                                                ? university.description|slice(0, 100) ~ '...' 
                                                : university.description }}
                                        </td>
                                        <td class="text-center">
                                            <img src="/university-qr/university/{{ university.id }}" 
                                                 alt="QR Code for {{ university.nom }}" 
                                                 style="width: 80px; height: 80px;" />
                                            <br />
                                            <a href="/university-qr/custom-download/{{ university.id }}" class="btn btn-sm btn-outline-primary mt-2">
                                                <i class="fas fa-download"></i> Download
                                            </a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="4" class="text-center py-4">
                                            <p class="text-muted mb-0">No universities found</p>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>

                            {% if external_universities is defined and external_universities|length > 0 %}
                                <h4 class="mt-5">Universités réelles trouvées :</h4>
                                <table class="table table-bordered mt-3">
                                    <thead>
                                        <tr>
                                            <th>Nom</th>
                                            <th>Pays</th>
                                            <th>Site web</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for ext in external_universities %}
                                        <tr>
                                            <td>{{ ext.name }}</td>
                                            <td>{{ ext.country }}</td>
                                            <td>
                                                {% if ext.web_pages is defined and ext.web_pages|length > 0 %}
                                                    <a href="{{ ext.web_pages[0] }}" target="_blank">{{ ext.web_pages[0] }}</a>
                                                {% else %}-{% endif %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            {% endif %}

                            <div class="text-center mt-4">
                                {{ knp_pagination_render(universities) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Universities Section End -->
{% endblock %}
