{% extends 'base.html.twig' %}

{% block title %}{{ university.nom }} - Details{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/qr-code.css') }}">
{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="row">
            <div class="col-md-8">
                <h1>{{ university.nom }}</h1>
                <div class="card shadow-sm mt-4">
                    <div class="card-body">
                        <table class="table table-hover mb-0">
                            <tbody>
            <tr>
                <th>IdUniversity</th>
                <td>{{ university.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ university.nom }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ university.ville }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ university.email }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ university.description }}</td>
            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="mt-4">
                    <a href="{{ path('app_university_index') }}" class="btn btn-outline-secondary me-2">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                    <a href="{{ path('app_university_edit', {'idUniversity': university.id}) }}" class="btn btn-primary me-2">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    {{ include('university/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
