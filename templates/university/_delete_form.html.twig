<form method="post" action="{{ path('app_university_delete', {'id': university.id}) }}" onsubmit="return confirm('Are you sure you want to delete this university? This action cannot be undone.');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ university.id) }}">
    <button class="btn btn-outline-danger">
        <i class="fas fa-trash me-2"></i>Delete University
    </button>
</form>
