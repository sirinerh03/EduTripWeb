{% extends 'base.html.twig' %}

{% block title %}Modifier l'avis{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Modifier l'avis</h1>

        {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
            <div class="mb-3">
                {{ form_label(form.comment, 'Commentaire', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.comment, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.comment) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.rating, 'Note', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.rating, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.rating) }}
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
                <a href="{{ path('app_review_index') }}" class="btn btn-secondary">Retour Ã  la liste</a>
                <a href="{{ path('app_dashboard') }}" class="btn btn-outline-primary">
                    <i class="fas fa-tachometer-alt me-2"></i>Retour au dashboard
                </a>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}