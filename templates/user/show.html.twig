{% extends 'base.html.twig' %}
{% block title %}Détail utilisateur{% endblock %}
{% block body %}
    <h1>Utilisateur #{{ user.idUser }}</h1>
    <p><strong>Prénom :</strong> {{ user.prenom }}</p>
    <p><strong>Nom :</strong> {{ user.nom }}</p>
    <p><strong>Mail :</strong> {{ user.mail }}</p>
    <p><strong>Téléphone :</strong> {{ user.tel }}</p>
    <p><strong>Status :</strong> {{ user.status }}</p>
    <p><strong>Rôle :</strong> {{ user.role }}</p>
    <p>
        <a href="{{ path('app_user_edit', {'id_user': user.idUser}) }}">Éditer</a>
        {{ include('user/_delete_form.html.twig') }}
        <a href="{{ path('app_user_index') }}">← Retour</a>
    </p>
{% endblock %}
