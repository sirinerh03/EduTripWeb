{% extends 'base.html.twig' %}

{% block title %}Nouveau Post{% endblock %}

{% block content %}


<div class="container mt-5 d-flex align-items-center justify-content-center min-vh-100">
    <div class="row justify-content-center w-100">
        <div class="col-md-8">
            <div class="card animate-card">
                <div class="card-header bg-primary text-white text-center">
                    <h2>üì¢ Cr√©er un nouveau Post</h2>
                </div>
                <div class="card-body bg-white">
                    {{ form_start(form, {'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'}}) }}
                    
                    <div class="form-group mb-4">
                        <label class="form-label fw-bold">
                            <i class="fas fa-align-left me-2"></i> Contenu du post
                        </label>
                        {{ form_widget(form.contenu, {
                            'attr': {
                                'class': 'form-control',
                                'rows': 5,
                                'placeholder': '√âcrivez votre post ici...'
                            }
                        }) }}
                        <div class="form-error-message text-danger mt-1">
                            {{ form_errors(form.contenu) }}
                        </div>
                    </div>

                    <div class="form-group mb-4">
                        <label class="form-label fw-bold">
                            <i class="fas fa-folder me-2"></i> Cat√©gorie
                        </label>
                        {{ form_widget(form.categorie, {
                            'attr': {
                                'class': 'form-control',
                                'placeholder': 'Ex: Voyage, √âtudes...'
                            }
                        }) }}
                        <div class="form-error-message text-danger mt-1">
                            {{ form_errors(form.categorie) }}
                        </div>
                    </div>

                    <div class="form-group mb-4">
                        <label class="form-label fw-bold">
                            <i class="fas fa-image me-2"></i> Image
                        </label>
                        {{ form_widget(form.imageFile, {
                            'attr': {
                                'class': 'form-control-file'
                            }
                        }) }}
                        <small class="form-text text-muted">Formats accept√©s: JPEG, PNG (max 2MB)</small>
                        <div class="form-error-message text-danger mt-1">
                            {{ form_errors(form.imageFile) }}
                        </div>
                    </div>

                    <div class="form-group text-center mt-4">
                        <button type="submit" class="btn btn-primary btn-lg shadow-sm px-4" onclick="this.innerHTML='<span class=\'spinner-border spinner-border-sm\'></span> Publication...'; this.form.submit();">
                            <i class="fas fa-paper-plane me-2"></i> Publier
                        </button>
                        <a href="{{ path('app_posts') }}" class="btn btn-outline-secondary btn-lg ms-2 px-4">
                            <i class="fas fa-arrow-left me-2"></i> Annuler
                        </a>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
<style>
    body {
        background: linear-gradient(to right, #e3f2fd, #ffffff);
    }

    .form-control {
        border-radius: 0.4rem;
        padding: 12px 16px;
        border: 1px solid #ced4da;
        transition: border-color 0.3s, box-shadow 0.3s, background-color 0.3s;
    }

    .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        background-color: #f9fbff;
    }

    .form-control:hover {
        background-color: #f1f9ff;
    }

    .card {
        border: none;
        border-radius: 0.5rem;
        overflow: hidden;
        box-shadow: 0 0.5rem 1.2rem rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

    .animate-card {
        animation: fadeIn 0.8s ease-in-out;
    }

    .card:hover {
        transform: scale(1.01);
    }

    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .card-header {
        background: linear-gradient(90deg, #007bff 0%, #0056b3 100%);
        border-radius: 0.375rem 0.375rem 0 0 !important;
    }

    .form-error-message {
        font-size: 0.875rem;
        font-weight: 500;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .btn-outline-secondary:hover {
        background-color: #6c757d;
        color: white;
    }

    .alert-info {
        border-radius: 0.5rem;
    }

    .min-vh-100 {
        min-height: 100vh;
    }
</style>
{% endblock %}
