{% extends 'base.html.twig' %}

{% block title %}Accueil - {{ parent() }}{% endblock %}

{% block content %}
    <!-- Hero Section Start -->
    <div class="container-fluid p-0 mb-5">
        <div class="owl-carousel header-carousel position-relative">
            <div class="owl-carousel-item position-relative">
                <img class="img-fluid" src="{{ asset('img/img1.jpg') }}" alt="">
                <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center" style="background: rgba(24, 29, 56, .7);">
                    <div class="container">
                        <div class="row justify-content-start">
                            <div class="col-sm-10 col-lg-8">
                                <h5 class="text-primary text-uppercase mb-3 animated slideInDown">Bienvenue sur EduTrip</h5>
                                <h1 class="display-3 text-white animated slideInDown">Votre passerelle vers des études à l'étranger</h1>
                                <p class="fs-5 text-white mb-4 pb-2">Rejoignez notre communauté d'étudiants et partagez vos expériences.</p>
                                <div class="d-flex align-items-center">
                                    <a href="{{ path('app_register') }}" class="btn btn-primary py-md-3 px-md-5 me-3 animated slideInLeft">S'inscrire</a>
                                    <a href="{{ path('app_login') }}" class="btn btn-light py-md-3 px-md-5 animated slideInRight">Se connecter</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Hero Section End -->

    <!-- Features Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="row g-4">
                <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="service-item text-center pt-3">
                        <div class="p-4">
                            <i class="fa fa-3x fa-graduation-cap text-primary mb-4"></i>
                            <h5 class="mb-3">Universités Reconnues</h5>
                            <p>Accédez à notre base de données d'universités partenaires</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.3s">
                    <div class="service-item text-center pt-3">
                        <div class="p-4">
                            <i class="fa fa-3x fa-home text-primary mb-4"></i>
                            <h5 class="mb-3">Hébergement Étudiant</h5>
                            <p>Trouvez le logement idéal pour votre séjour</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.5s">
                    <div class="service-item text-center pt-3">
                        <div class="p-4">
                            <i class="fa fa-3x fa-plane text-primary mb-4"></i>
                            <h5 class="mb-3">Réservation de Vols</h5>
                            <p>Comparez et réservez vos billets d'avion</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.7s">
                    <div class="service-item text-center pt-3">
                        <div class="p-4">
                            <i class="fa fa-3x fa-comments text-primary mb-4"></i>
                            <h5 class="mb-3">Avis & Expériences</h5>
                            <p>Partagez et consultez les retours d'expérience</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Features End -->

    <!-- Call to Action Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="bg-light rounded p-5 wow fadeInUp" data-wow-delay="0.1s">
                <div class="row g-5 align-items-center">
                    <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s">
                        <div class="h-100">
                            <h1 class="display-6 mb-4">Rejoignez Notre Communauté</h1>
                            <p class="mb-4">Créez votre compte pour accéder à toutes nos fonctionnalités :</p>
                            <div class="d-flex align-items-center mb-2">
                                <i class="fa fa-check bg-light text-primary btn-sm-square rounded-circle me-3 fw-bold"></i>
                                <span>Partagez vos expériences</span>
                            </div>
                            <div class="d-flex align-items-center mb-2">
                                <i class="fa fa-check bg-light text-primary btn-sm-square rounded-circle me-3 fw-bold"></i>
                                <span>Consultez les avis des autres étudiants</span>
                            </div>
                            <div class="d-flex align-items-center mb-4">
                                <i class="fa fa-check bg-light text-primary btn-sm-square rounded-circle me-3 fw-bold"></i>
                                <span>Accédez à des offres exclusives</span>
                            </div>
                            <a class="btn btn-primary py-3 px-4" href="{{ path('app_register') }}">S'inscrire maintenant</a>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <img class="img-fluid rounded" src="{{ asset('img/img3.png') }}" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Call to Action End -->
{% endblock %} 