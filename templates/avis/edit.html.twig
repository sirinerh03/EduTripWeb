{% extends 'base.html.twig' %}

{% block title %}Modifier un avis - EduTrip{% endblock %}

{% block content %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body p-5">
                    <h1 class="text-center mb-4">Modifier un avis</h1>

                    {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                        <div class="mb-4">
                            {{ form_label(form.rating, 'Note', {'label_attr': {'class': 'form-label'}}) }}
                            <div class="rating-input">
                                {{ form_widget(form.rating, {'attr': {'class': 'rating-radio'}}) }}
                                {{ form_errors(form.rating) }}
                            </div>
                        </div>

                        <div class="mb-4">
                            {{ form_label(form.comment, 'Commentaire', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.comment, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.comment) }}
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save me-2"></i>Enregistrer les modifications
                            </button>
                            <div class="d-flex gap-2">
                                <a href="{{ path('app_avis_index') }}" class="btn btn-outline-secondary flex-grow-1">
                                    <i class="fas fa-arrow-left me-2"></i>Retour à la liste
                                </a>
                                <a href="{{ path('app_dashboard') }}" class="btn btn-outline-primary flex-grow-1">
                                    <i class="fas fa-tachometer-alt me-2"></i>Retour au dashboard
                                </a>
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .rating-input {
        display: flex;
        flex-direction: row-reverse;
        justify-content: flex-end;
    }

    .rating-radio {
        display: none;
    }

    .rating-input label {
        cursor: pointer;
        font-size: 2rem;
        color: #ddd;
        margin: 0 0.2rem;
    }

    .rating-input label:hover,
    .rating-input label:hover ~ label,
    .rating-input input:checked ~ label {
        color: #ffc107;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const ratingInputs = document.querySelectorAll('.rating-radio');
        const ratingLabels = document.querySelectorAll('.rating-input label');

        // Convertir les labels en étoiles
        ratingLabels.forEach(label => {
            label.innerHTML = '<i class="fas fa-star"></i>';
        });
    });
</script>
{% endblock %}
