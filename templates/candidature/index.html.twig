{% extends 'homeadmin.html.twig' %}

{% block title %}Mes Candidatures{% endblock %}

{% block Content %}
    <!-- Candidatures Section Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                <h1 class="mb-5">Mes Candidatures</h1>
            </div>
             <!-- Add Statistics Button -->
            <div class="text-end mb-4">
                <a href="{{ path('app_statistics') }}" class="btn btn-primary">
                    <i class="fas fa-chart-bar me-2"></i>View Statistics
                </a>
            </div>
            

            <div class="row g-4 justify-content-center">
                <div class="col-lg-12 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="course-item bg-light">
                        <div class="p-4">
                            <form method="get" class="mb-4">
                                <div class="row g-2">
                                    <div class="col-md-6">
                                        <input type="text" name="search" value="{{ search|default('') }}" class="form-control" placeholder="Search by CV, lettre de motivation, diplôme...">
                                    </div>
                                    <div class="col-md-6 d-flex gap-2">
                                        <button class="btn btn-primary" type="submit">Search</button>
                                        <a class="btn btn-outline-secondary" href="?sort=cv&direction={{ sort == 'cv' and direction == 'ASC' ? 'desc' : 'asc' }}&search={{ search|url_encode }}">
                                            Sort by CV
                                            {% if sort == 'cv' %}
                                                <i class="fas fa-sort-{{ direction == 'ASC' ? 'up' : 'down' }}"></i>
                                            {% endif %}
                                        </a>
                                        <a class="btn btn-outline-secondary" href="?sort=lettre_motivation&direction={{ sort == 'lettre_motivation' and direction == 'ASC' ? 'desc' : 'asc' }}&search={{ search|url_encode }}">
                                            Sort by Lettre de motivation
                                            {% if sort == 'lettre_motivation' %}
                                                <i class="fas fa-sort-{{ direction == 'ASC' ? 'up' : 'down' }}"></i>
                                            {% endif %}
                                        </a>
                                        <a class="btn btn-outline-secondary" href="?sort=diplome&direction={{ sort == 'diplome' and direction == 'ASC' ? 'desc' : 'asc' }}&search={{ search|url_encode }}">
                                            Sort by Diplôme
                                            {% if sort == 'diplome' %}
                                                <i class="fas fa-sort-{{ direction == 'ASC' ? 'up' : 'down' }}"></i>
                                            {% endif %}
                                        </a>
                                    </div>
                                </div>
                            </form>

                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>


                                        <th scope="col">CV</th>
                                        <th scope="col">Lettre de motivation</th>
                                        <th scope="col">Diplôme</th>
                                        <th scope="col">État</th>
                                        <th scope="col">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for candidature in candidatures %}
                                    <tr>
                                        <td>{{ candidature.cv }}</td>
                                        <td>{{ candidature.lettreMotivation }}</td>
                                        <td>{{ candidature.diplome }}</td>
                                        <td>
                                            <span class="badge bg-{{ candidature.etat == 'Acceptée' ? 'success' : (candidature.etat == 'Refusée' ? 'danger' : 'warning') }} rounded-pill">
                                                {{ candidature.etat }}
                                            </span>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="{{ path('app_candidature_edit', {'id': candidature.id}) }}" class="btn btn-sm btn-outline-primary"><i class="fas fa-edit"></i> Edit</a>

                                                {# Add the "Show" Button #}
                                                <a href="{{ path('app_candidature_show', {'id': candidature.id}) }}" class="btn btn-sm btn-outline-info">
                                                    <i class="fas fa-eye"></i> Show
                                                </a>

                                                <form method="post" class="d-inline" action="{{ path('app_candidature_delete', {'id': candidature.id}) }}" onsubmit="return confirm('Are you sure you want to delete this candidature?');">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ candidature.id) }}">
                                                    <button class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i> Delete</button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="6" class="text-center py-4">
                                            <p class="text-muted mb-0">No candidatures found</p>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                                
                            </table>

                            <div class="text-center mt-4">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Candidatures Section End -->

{% endblock %}

