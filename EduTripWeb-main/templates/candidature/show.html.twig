{% extends 'base.html.twig' %}

{% block title %}Candidature{% endblock %}

{% block body %}
    <h1>Détails de la Candidature</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>CV</th>
                <td>
                    {% if candidature.cv %}
                        <a href="{{ asset('uploads/' ~ candidature.cv) }}" target="_blank">{{ candidature.cv }}</a>
                    {% else %}
                        Non fourni
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Lettre de motivation</th>
                <td>
                    {% if candidature.lettreMotivation %}
                        <a href="{{ asset('uploads/' ~ candidature.lettreMotivation) }}" target="_blank">{{ candidature.lettreMotivation }}</a>
                    {% else %}
                        Non fournie
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Diplôme</th>
                <td>
                    {% if candidature.diplome %}
                        <a href="{{ asset('uploads/' ~ candidature.diplome) }}" target="_blank">{{ candidature.diplome }}</a>
                    {% else %}
                        Non fourni
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>État</th>
                <td>{{ candidature.etat }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_candidature_index') }}" class="btn btn-secondary">Retour à la liste</a>
    <a href="{{ path('app_candidature_edit', {'id': candidature.id}) }}" class="btn btn-primary">Modifier</a>

    {{ include('candidature/_delete_form.html.twig') }}
    
{% endblock %}
